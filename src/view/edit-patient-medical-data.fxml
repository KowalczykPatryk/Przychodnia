<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.DatePicker?>

<VBox spacing="10" style="-fx-padding: 20px;" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.EditPatientMedicalDataController">

    <HBox>
        <Button text="Powrót" onAction="#goToDoctorDashboard"/>
    </HBox>

    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label fx:id="patientNameLabel" style="-fx-font-size: 18px;"/>

    <Label text="Dodaj chorobę:" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="diseaseComboBox" promptText="Wybierz chorobę" prefWidth="200"/>
        <Button text="Dodaj chorobę" onAction="#handleAddDisease"/>
    </HBox>
    <Label text="Aktualne choroby:"/>
    <ListView fx:id="diseaseListView" prefHeight="200" prefWidth="400"/>
    <Button text="Usuń zaznaczoną chorobę" onAction="#handleRemoveDisease"/>

    <Label text="Dodaj alergie:" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="allergyComboBox" promptText="Wybierz alergię" prefWidth="200"/>
        <Button text="Dodaj alergię" onAction="#handleAddAllergy"/>
    </HBox>
    <Label text="Aktualne alergie:"/>
    <ListView fx:id="allergyListView" prefHeight="200" prefWidth="400"/>
    <Button text="Usuń zaznaczoną alergię" onAction="#handleRemoveAllergy"/>

</VBox>